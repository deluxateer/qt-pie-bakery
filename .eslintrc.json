{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["import"],
    "rules": {
        "linebreak-style": "off",
        "no-param-reassign": [2, {"props": false}],
        "arrow-parens": [2, "as-needed"],
        "no-trailing-spaces": [2, { "skipBlankLines": true }]
    }
}